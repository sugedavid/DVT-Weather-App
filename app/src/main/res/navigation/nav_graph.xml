<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sogoamobile.dvtweatherapp.presentation.fragments.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>

    <!--    favourites-->
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.sogoamobile.dvtweatherapp.presentation.fragments.FavouritesFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourites">

        <action
            android:id="@+id/action_favouritesFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_favouritesFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>

    <!--    map-->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.sogoamobile.dvtweatherapp.presentation.fragments.MapsFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_maps">

        <action
            android:id="@+id/action_mapFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment"
            app:popUpTo="@id/favouritesFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.sogoamobile.dvtweatherapp.presentation.fragments.WeatherInfoFragment"
        android:label="Weather Info"
        tools:layout="@layout/fragment_weather_info">

        <argument
            android:name="long"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="lat"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="city"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_weatherFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>